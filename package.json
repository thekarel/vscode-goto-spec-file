{
    "name": "open-spec-file",
    "displayName": "Open Spec File",
    "description": "Quickly access spec files for TDD zen",
    "version": "0.0.5",
    "publisher": "thekarel",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.openSpecFile"
    ],
    "main": "./src/extension",
    "contributes": {
        "commands": [{
            "command": "extension.openSpecFile",
            "title": "Open Spec File"
        }],
        "keybindings": [{
            "command": "extension.openSpecFile",
            "key": "ctrl+k ctrl+k",
            "mac": "cmd+k cmd+k"
        }],
        "configuration": {
            "type": "object",
            "title": "Open Spec File configuration",
            "properties": {
                "openSpecFile.suffixMap": {
                    "type": "object",
                    "default": {
                        ".js": ".spec.js",
                        ".spec.js": ".js",
                        ".html": ".css"
                    }
                },
                "openSpecFile.openInNewColumn": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "bugs": {
        "url": "https://github.com/thekarel/vscode-open-spec-file/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/thekarel/vscode-open-spec-file.git"
    },
    "homepage": "https://github.com/thekarel/vscode-open-spec-file"
}
